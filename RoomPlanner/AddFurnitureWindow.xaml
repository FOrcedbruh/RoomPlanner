<Window x:Class="RoomPlanner.AddFurnitureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomPlanner"
        mc:Ignorable="d"
        Title="Добавление мебели" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите мебель" />
            <ComboBox x:Name="Furniture">
                <ComboBoxItem Tag="Chair.jpg">Стул</ComboBoxItem>
                <ComboBoxItem Tag="Table.jpg">Стол</ComboBoxItem>
                <ComboBoxItem Tag="Cabinet.jpg">Шкаф</ComboBoxItem>
                <ComboBoxItem Tag="Sofa.jpg">Диван</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Ширина:" />
            <TextBox x:Name="FurnitureWidthTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Длина:" />
            <TextBox x:Name="FurnitureHeightTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Высота:" />
            <TextBox x:Name="FurnitureZindexTextBox" Margin="0,5,0,10"/>

            <Button Content="Добавить" Click="AddButton_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
