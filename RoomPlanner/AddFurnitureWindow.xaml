<Window x:Class="RoomPlanner.AddFurnitureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomPlanner"
        mc:Ignorable="d"
        Title="AddFurnitureWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя мебели:" />
            <TextBox x:Name="FurnitureNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Ширина:" />
            <TextBox x:Name="FurnitureWidthTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Высота:" />
            <TextBox x:Name="FurnitureHeightTextBox" Margin="0,5,0,10"/>

            <Button Content="Добавить" Click="AddButton_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
