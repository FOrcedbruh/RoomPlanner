<Window x:Class="RoomPlanner.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoomPlanner"
        mc:Ignorable="d"
        Icon="https://img.icons8.com/fluent-systems-regular/512w/40C057/room.png"
        Title="Авторизация" Height="260" Width="300">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center">
            <TextBlock  HorizontalAlignment="Center" Foreground="#70e000" FontWeight="Bold" FontSize="18">Вход</TextBlock>
            <Label FontWeight="Bold" Margin="20 0 0 0">Логин</Label>
            <TextBox Padding="10 0" FontWeight="DemiBold"  Margin="20 0" x:Name="login" Background="Gray"></TextBox>
            <Label FontWeight="Bold" Margin="20 0 0 0">Пароль</Label>
            <PasswordBox Background="Gray" Padding="10 0" FontWeight="DemiBold" Margin="20 0" x:Name="password"></PasswordBox>
            <Button Click="Button_Click" Height="30" Width="100" Margin="10" Background="Gray" Foreground="#70e000">Авторизоваться</Button>
        </StackPanel>
    </Grid>
</Window>
